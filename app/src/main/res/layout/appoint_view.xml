<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="149dp"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Service: "
            android:textSize="25dp" />

        <TextView
            android:id="@+id/appointService"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/appointService"
            android:layout_marginTop="5dp"
            android:text="Price: "
            android:textSize="25dp" />

        <TextView
            android:id="@+id/appointPrice"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointService"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointPrice"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Date: "
            android:textSize="25dp" />


        <TextView
            android:id="@+id/appointDate"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointPrice"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/button24"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="23dp"
            android:backgroundTint="#880404"
            android:text="Add Penalty" />

        <Button
            android:id="@+id/button25"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="22dp"
            android:text="Completed" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>