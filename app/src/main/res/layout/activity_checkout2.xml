<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkout2">

    <TextView
        android:id="@+id/salonName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        android:text="SALON NAME"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointbtn" />

    <Button
        android:id="@+id/appointbtn"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/yellow"
        android:text="APPOINTMENT"
        android:textColor="@color/textColor"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkbtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/checkbtn"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/yellow"
        android:text="CHECKOUT"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toEndOf="@+id/appointbtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/serviceBought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:text="SERVICE"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salonName3" />

    <TextView
        android:id="@+id/serbought1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Feather Cut"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviceBought" />

    <TextView
        android:id="@+id/amount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="1000"
        android:textColor="@color/textColor"
        app:layout_constraintBaseline_toBaselineOf="@+id/serbought1"
        app:layout_constraintStart_toEndOf="@+id/serbought1" />

    <TextView
        android:id="@+id/appointDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Appointment Date"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serbought1" />

    <TextView
        android:id="@+id/appDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="26/06/2022"
        android:textColor="@color/textColor"
        app:layout_constraintBaseline_toBaselineOf="@+id/appointDate"
        app:layout_constraintStart_toEndOf="@+id/appointDate" />

    <TextView
        android:id="@+id/warningMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:text="WARNING"
        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointDate" />

    <TextView
        android:id="@+id/warningTxt"
        android:layout_width="291dp"
        android:layout_height="69dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="*If you cancel your appointment within two days prior to the date reserved, a penalty will be imposed."
        android:textColor="@color/design_default_color_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warningMsg" />

    <Button
        android:id="@+id/checkoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="CHECKOUT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warningTxt"
        tools:ignore="TextContrastCheck,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>